type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  username: String! @unique
  posts: [Post!]
  notifications: [Notification!]
  messages: [Message!]
  groups: [Group!]!
}

type User2 {
    id: ID! @unique
    user: User!
}

type Message {
  id: ID! @unique
  user: User!
  user2: [User!]
  message: String
  attached: [String!]
  isSeen: Boolean! @default(value: "false")
  isDeleted: Boolean! @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Conversation {
   id: ID! @unique
   user: User!
   group: Group
   user2: User2
   message: [Message!]
   startedAt: DateTime!
   createdAt: DateTime!
}

type Group {
  id: ID! @unique
  name: String
  conversation: [Conversation!]
}

type GroupMessage {
  id: ID! @unique
  user: User!
  message: String
  attached: [String!]
  seen: Int! @default(value: "0")
  isDeleted: Boolean! @default(value: "false")
}

type Notification {
  id: ID! @unique
  type: Int!
  title: String
  user: User!
}

type Post {
  id: ID! @unique
  title: String!
  targets: String
  published: Boolean! @default(value: "false")
  author: User!
}