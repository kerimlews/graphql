type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  username: String! @unique
  posts: [Post!]
  notifications: [Notification!]
  messages: [Message!]
}

type Message {
  id: ID! @unique
  user: User!
  user2: Int!
  createdAt: DateTime!
  message: String
}

type Notification {
  id: ID! @unique
  type: Int!
  title: String
  user: User!
}

type Post {
  id: ID! @unique
  title: String!
  targets: String
  published: Boolean! @default(value: "false")
  author: User!
}