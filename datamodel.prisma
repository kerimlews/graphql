type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  username: String! @unique
  posts: [Post!]
  notifications: [Notification!]
  messages: [Message!]
  groups: [Group!]!
}

type Message {
  id: ID! @unique
  user: User!
  user2: [User!]
  message: String
  attached: [String!]
  isSeen: Boolean! @default(value: "false")
}

type UserGroup {
  user: User!
  group: Group!
}

type Group {
  id: ID! @unique
  user: User!
  users: [UserGroup!]
  name: String
}

type Notification {
  id: ID! @unique
  type: Int!
  title: String
  user: User!
}

type Post {
  id: ID! @unique
  title: String!
  targets: String
  published: Boolean! @default(value: "false")
  author: User!
}