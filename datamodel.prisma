type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  username: String! @unique
  expoToken: String
  isActive: Boolean! @default(value: "false")
  posts: [Post!]
  notifications: [Notification!]
  conversation: [Conversation!] @relation(name: "RelationConversation")
}

type Message {
  id: ID! @unique
  message: String
  attached: [String!]
  isSeen: Boolean! @default(value: "false")
  isDeleted: Boolean! @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
  conversation: Conversation!
}

type Conversation {
   id: ID! @unique
   user: User! @relation(name: "Sender")
   group: Group
   user2: User! @relation(name: "RelationConversation")
   message: [Message!]
   startedAt: DateTime!
   createdAt: DateTime!
}

type Group {
  id: ID! @unique
  name: String
  conversation: [Conversation!]
}

type Notification {
  id: ID! @unique
  type: Int!
  title: String
  user: User!
}

type Post {
  id: ID! @unique
  title: String!
  targets: String
  published: Boolean! @default(value: "false")
  author: User!
}